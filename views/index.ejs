<!-- Main page html view -->
<!DOCTYPE html>
<html>
  <!-- include head -->
  <%- include partials/head %>   
  
  <body class="d-flex flex-column h-1000 mb-5 body-style" >
    <header> 
      <!-- include navbar -->
      <%- include partials/navbar %>
    </header>
      <main class="flex-shrink-0">
        <div class="container mt-4 mb-2 container-style">
          <div class="row" style="height: 100%;" >
            <% if(title == "Home") { %> 
              <!-- include partial home page -->
                <%- include partials/home %>
              <%} else if(title == "About") { %> 
                <!-- include partial about page -->
                <%- include partials/about %>
              <%} else if(title == "Services") { %> 
                <!-- include partial services page -->
                <%- include partials/services %>
              <%} else if(title == "Projects") { %>
              <!-- include partial projects page --> 
                <%- include partials/projects %>
              <%} else if(title == "Business Contact List") { %>
                <!-- include partial projects page --> 
                <%- include partials/contact_list %>
              <%} else if(title == "Add New Contact") { %>
                <!-- include partial add_contact page --> 
                <%- include partials/add_contact %>
              <%} else if(title == "Update Contact") { %>
                <!-- include partial update_contact page --> 
                <%- include partials/update_contact %>
            <% } %>            
          </div>
      </main>   
  </body>
  <footer class="footer mt-auto py-2 fixed-bottom footer-bg">
    <!-- include footer -->
    <%- include partials/footer %>
  </footer>
</html>