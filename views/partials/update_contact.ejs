<div class="col-md-12">
    <div class="col-md-12">
      <h1 class="h1 text-warning text-center"><%=title%></h1>
    </div>
    <div class="col-md-12">
        <div class="form-field"> 
          <form style="text-align: start;" id="form" action="/contact-list/update/<%=Contact.id%>" method="POST">
            <div class="col-md-12 mb-3">
              <label for="nameText" class="form-label">Name</label>
              <input type="text" class="form-control" name="name" id="nameText" placeholder="Name" value="<%= Contact.name%>" required>
            </div>
            <div class="col-md-12 mb-3">
              <label for="numberText" class="form-label">Contact Number</label>
              <input type="number" class="form-control" name="contact" id="numberText" placeholder="Contact Number" value="<%= Contact.contact_number%>" required>
            </div>
            <div class="col-md-12 mb-3">
              <label for="exampleFormControlInput1" class="form-label">Email address</label>
              <input type="email" class="form-control" name="email" id="exampleFormControlInput1" placeholder="name@example.com" value="<%= Contact.email%>" required>
            </div>    
            <div class="row">
              <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Update Contact</button>
              </div>
            </div>
            </form>
        </div>
    </div>
  </div>